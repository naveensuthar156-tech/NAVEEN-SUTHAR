n=int(input("enter your value"))
rev=0
while n>0:
    a=n%10
    rev=rev*10+a
    n=int(n/10)
print("reverse number:=",rev)




sure='y'
while sure=='y':
    n=int(input("enter your value"))
    rev=0
    while n>0:
         a=n%10
         rev=rev*10+a
         n=int(n/10)
    print("reverse number:=",rev)
sure=input("do ypu wnat to continue?? (y/n)=")